//Subarray with 0 sum
#include <iostream>
using namespace std;

bool subarraycheck(int arr[],int n){
    for(int i=0;i<n;i++){
        int sum = arr[i];
        if(sum == 0){
            return true;
        }
    for(int j=j+1;j<n;j++){
        sum += arr[j];
        if(sum == 0){
            return true;
        }
    }
    }
    return false;
}

//print array function
int printarray(int arr[],int n){
    for(int i=0;i<n;i++){
        cout<<arr[i]<<",";
    }
    cout<<endl;
}

//Driver code
int main(){
    int n;
    //taking array size from user
    cout<<"Enter the size of the array"<<endl;
    cin>>n;
    
    //initializing array
    int arr[n];
    //take input array form user
    cout<<"Enter element"<<endl;
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    //print array function
    printarray(arr,n);
    
    //function call
    bool ans = subarraycheck(arr,n);
    if(ans){
        cout<<"sub array exist!"<<endl;
    }else{
        cout<<"sub array not exist!"<<endl;
    }

    return 0;
}

